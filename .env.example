# ======================================
# URL Shortener Bot - Environment Variables
# ======================================
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
# Get your bot token from @BotFather
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567

# Webhook URL (your Render app URL)
# Example: https://your-app-name.onrender.com
WEBHOOK_URL=https://your-app-name.onrender.com

# MongoDB Configuration
# Get free MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DB_NAME=url_shortener

# Server Configuration (Quart)
SECRET_KEY=your-secret-key-change-this-in-production
PORT=10000
DEBUG=False

# URL Shortener Settings
SHORT_CODE_LENGTH=6
BASE_URL=https://your-app-name.onrender.com

# Rate Limiting
MAX_URLS_PER_HOUR=10
MAX_URLS_PER_DAY=50

# URL Validation
MAX_URL_LENGTH=2048
BLOCKED_DOMAINS=malicious.com,spam.site

# QR Code Settings
QR_BOX_SIZE=10
QR_BORDER=4
